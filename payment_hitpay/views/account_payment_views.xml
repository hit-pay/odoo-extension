<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="view_pos_payment_form_hitpay" model="ir.ui.view">
        <field name="name">account.payment.form hitpay</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_method_line_id']/.." position="after">
                <group name="hitpay" 
                    invisible="not hitpay_payment_id"
                     string="Hitpay Payment Transaction">
                        <field name="hitpay_payment_id"/>
                        <field name="hitpay_payment_amount"/>
                        <field name="hitpay_payment_currency"/>
                        <field name="hitpay_payment_status"/>
                </group>
                <group name="hitpay_refund"
                    invisible="not hitpay_refund_id"
                  string="Hitpay Refund Transaction">
                        <field name="hitpay_refund_id"/>
                        <field name="hitpay_refund_amount"/>
                        <field name="hitpay_refund_currency"/>
						<field name="hitpay_refund_createdat"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>